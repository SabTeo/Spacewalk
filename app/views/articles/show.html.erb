<head>
    <%= stylesheet_link_tag 'main' %>
</head>

<%= render '/menubar' %>

<p id="notice"><%= notice %></p>

<div class="art_body">
    <H1><%= @article.title %></H1>
    <p  style="font-size:0.8rem"><%= @article.published_at.strftime("%B %d, %Y") %></p>
    <img src=<%= @article.img_url %> height="220" width="340">
    <p><%= @article.body %></p>
    <%= link_to 'Indietro', articles_path, class: :link %>
    <%= link_to 'Commenti', comments_url(@article), class: :link %>
</div>
<%= form_with(model: article) do |form| %>

  <div>
    <%= form.label :Title %><br>
    <%= form.text_field :title %>
  </div>

  <div>
    <%= form.label :Body %><br>
    <%= form.text_area:body %>
  </div>
  
  <div>
    <%= form.label :Image %><br>
    <%= form.text_field :img_url %>
  </div>

  <%= form.hidden_field :updated_at, :value => DateTime.now  %>
  <%= form.hidden_field :created_at, :value => DateTime.now  %>
  <%= form.hidden_field :published_at, :value => DateTime.now  %>

  <%= form.hidden_field :author_id, :value => current_user.id  %>
  <%= form.hidden_field :local, :value => true  %>



  <% if article.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(article.errors.count, "error") %> prohibited this article from being saved:</h2>

      <ul>
        <% article.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>

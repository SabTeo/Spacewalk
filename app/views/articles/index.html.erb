<p id="notice"><%= notice %></p>

<h1>Articles</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @articles.each do |article| %>
      <tr>
        <td>
          <div>
            <%= if article.local==true
        	  link_to article.title, article
        	  else
        	  link_to article.title, article.url 
        	  end %> |
            <%= link_to "commenti", comments_url(article) %>
          </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


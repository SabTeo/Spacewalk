<h2>Edit <%= resource_name.to_s.humanize %></h2>

<%= render "users/shared/error_messages", resource: @user %>

<% if current_user.image.attached? %>
  <%=  image_tag(current_user.image, style:" display:inline-block;
                                      height:150px;
                                      width:150px;
                                      object-fit:cover;
                                      border-radius:50%;
                                      ") %>
<% end %>

<%= form_with url: edit_profile_path(current_user), method: :post, :id => 'profile_form' do |form| %>

  <div class="field">
    <%= form.file_field :image, direct_upload: true %>
  </div>

  <div class="field">
  <%= form.label :username %><br />
  <%= form.text_field :username, value: current_user.username %>
  </div>

  <%= form.submit "salva", id: "submit_btn" %>
<% end %>

<% if current_user.provider.nil? %>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>

    <!--<div class="field">
      <%#= f.label :email %><br />
      <%#= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>-->



    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>


    <div class="field">
      <%= f.label :password %> <i>(lasciare vuoto per non modificare)</i><br />
      <%= f.password_field :password, autocomplete: "new-password" %>
      <% if @minimum_password_length %>
        <br />
        <em> lunghezza minima: <%= @minimum_password_length %> </em>
    </div>

    <div class="field">
      <%= f.label "conferma password" %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    </div>
    <% end %>

    <div class="field">
      <%= f.label "password corrente" %> <br />
      <%= f.password_field :current_password, autocomplete: "current-password" %>
    </div>

    <div class="actions">
      <%= f.submit "Update" %>
    </div>
  <% end %>
 <% end %>


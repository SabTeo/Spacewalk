<h2>Edit <%= resource_name.to_s.humanize %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "users/shared/error_messages", resource: resource %>

  <!--<div class="field">
    <%#= f.label :email %><br />
    <%#= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>-->

  <% if current_user.image.attached? %>
    <%=  image_tag(current_user.image, style:" display:inline-block;
                                        height:150px;
                                        width:150px;
                                        object-fit:cover;
                                        border-radius:50%;
                                        ") %>
  <% end %>

  <div class="field">
    <%= f.file_field :image, direct_upload: true %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field">
  <%= f.label :username %><br />
  <%= f.text_field :username %>
  </div>

  <% if current_user.provider.nil? %>
  <div class="field">
    <%= f.label :password %> <i>(lasciare vuoto per non modificare)</i><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
    <% if @minimum_password_length %>
      <br />
      <em> lunghezza minima: <%= @minimum_password_length %> </em>
    <% end %>
  </div>

  <div class="field">
    <%= f.label "conferma password" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>
  <% end %>

  <div class="field">
    <%= f.label "password corrente" %> <br />
    <%= f.password_field :current_password, autocomplete: "current-password" %>
  </div>

  <div class="actions">
    <%= f.submit "Update" %>
  </div>
<% end %>


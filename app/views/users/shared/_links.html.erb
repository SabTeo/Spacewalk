



<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <%= link_to "Forgot your password?", new_password_path(resource_name), class:"btn btn-primary btn-block mb-4" %><br />
<% end %>

<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <%= link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name), class:"btn btn-primary btn-block mb-4" %><br />
<% end %>

<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <%= link_to "Didn't receive unlock instructions?", new_unlock_path(resource_name) , class:"btn btn-primary btn-block mb-4"%><br />
<% end %>

<%- if devise_mapping.omniauthable? %>
<div class="d-flex flex-column ">
    <p class="text-muted mb-2">Oppure accedi con...</p>
    <div class="d-flex align-items-center">
      <%- resource_class.omniauth_providers.each do |provider| %>
        <%= button_to "#{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider), data: { turbo: false },class:"box me-2" %><br />
      <% end %>
    </div>

    <div class="mt-3">
      <%- if controller_name != 'sessions' %>
        <p class="mb-0 text-muted">Hai gi√† un account?</p>
        <%= link_to "Log in", new_session_path(resource_name), class:"btn btn-primary btn-block mb-4"%><br />
      <% end %>

      <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
        <p class="mb-0 text-muted">Doesn't have an account?</p>
        <%= link_to "Sign up", new_registration_path(resource_name), class:"btn btn-primary btn-block mb-4" %><br />
      <% end %>
    </div>


</div>


  
<% end %>

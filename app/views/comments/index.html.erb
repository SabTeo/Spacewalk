<p id="notice"><%= notice %></p>

<h1>Comments</h1>
<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>
  <div>
    <%= form_with url: new_comment_path(@art_id), method: :post do |form| %>
      <%= form.hidden_field :art_id, :value => @art_id  %>
      <%= form.label :text, "Scrivi un commento:" %>
      <%= form.text_field :text %>
      <%= form.submit "pubblica" %>
    <% end %>
  </div>
  <hr>
  <tbody>
    <% @comments.each do |comment| %>
      <tr>
      <div>
      <%= comment.user.id %>
      <%= comment.text %>
      </div>
       <td><%#= link_to 'Show', comment %></td>
       <td><%#= link_to 'Edit', edit_comment_path(comment) %></td>
        <td><%#= link_to 'Destroy', comment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
    <p> <%= if (@comments.empty?)==true then 'Ancora nessun commento' end %> </p>
  </tbody>
</table>

<br>
<%= link_to 'Indietro', articles_path %>

